body.ignite-od
  background: url(/img/ignite-od.jpg) no-repeat;
  background-size: contain;
  background-position: center;

.ui.menu .item.branding
  margin-right 8rem

md-progress-linear.ignite
  .md-container
    top: 0px
    height: 3px
  .md-bar2
    transition: none

ng-pdf
  transition: background-color 2s
  &.ready
    background: white

md-content#container.container
  background: none


.md-tile-content h3
  text-overflow: ellipsis
  overflow: hidden

#sidehover
  z-index: 19
  position: fixed
  left: 0
  top: 0
  height: 100%
  width: 90px


.animate-if
  background: white
  border: 1px solid black
  padding: 10px
  &.ng-enter,
  &.ng-leave
    transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 2s

  &.ng-enter,
  &.ng-leave.ng-leave-active
    opacity: 0

  &.ng-leave,
  &.ng-enter.ng-enter-active
    opacity: 1
